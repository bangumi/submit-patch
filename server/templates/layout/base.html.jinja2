    import Cookies from '/static/js-cookie/3.0.5/dist/js.cookie.min.mjs'

    Cookies.set('tz', (new Date()).getTimezoneOffset());
  </script>
</head>

<body>
<div class="container mt-2">{% block content %}{% endblock %}</div>
</body>

</html>
