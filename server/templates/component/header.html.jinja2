<div class="row d-flex flex-row">
    <div class="col">
        <a href="/" class="link-underline link-underline-opacity-0"><h3>
            返回首页</h3>
        </a>
    </div>

    <div class="col">
        {% if title is defined %}
            <h3>{{ title }}</h3>
        {% endif %}
    </div>

    <div class="col">
        {% if auth %}
            {% if request.url.path == "/" and auth.allow_edit %}
                <a href="/review/{{ auth.user_id }}"
                   class="link-underline link-underline-opacity-0 float-end"
                   target="_blank">
                    <h3>查看我的历史审核</h3>
                </a>
            {% endif %}
        {% endif %}
    </div>
    <hr>
</div>
